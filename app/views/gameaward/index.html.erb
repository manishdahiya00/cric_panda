<%= render "main/navbar" %>
<div class="d-flex flex-column align-items-center justify-content-center mt-5">
	<%= image_tag(@gameAward.image_url,style:"width:80vw") %>
	<h3 class="mt-3">Get Unlimited Instagram Followers</h3>
	<%= form_with model:@gameaward ,class:"form w-75 mt-3" do |f| %>
	<% game_award_id = GameAward.find_by(award_id:params[:award_id]).id %>
  <%= f.hidden_field :game_award_id,value:game_award_id %>
		<%= f.text_field :player_id ,class:"form-control" ,placeholder:"Enter Your Instagram Username" %>
    <%= f.submit "Redeem",class:"fs-5 btn btn-warning w-100 mt-3 text-dark" %>  
	<% end %>
	<h2 class="mt-4">Rules</h2>
<ul class="list-group  fs-5 ms-4 mb-5">
  <% @gameAward.rules.split("\n").each do |rule| %>
    <li class="list-group-item border-0"><%= rule %></li>
  <% end %>
</ul>

</div>
<%= render "main/footer" %>