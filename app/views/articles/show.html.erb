
  <div class="main-content container">
    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <div class="d-lg-flex justify-content-start align-items-center gap-3">
      <%= link_to "Back", articles_path,class:"btn btn-dark fw-medium" %>
      <h1><%= @article.title %></h1>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Title</label>
          <h2 class="form-control"><%= @article.title %></h2>
        </div>

        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">description</label>
          <h2 class="form-control"><%= @article.description %></h2>
        </div>


        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Image Url</label>
          <h2 class="form-control"><%= @article.img_url %></h2>
        </div>
        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Category</label>
          <h2 class="form-control"><%= @article.category %></h2>
        </div>
        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Permalink</label>
          <h2 class="form-control"><%= @article.permalink %></h2>
        </div>

        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Published Date</label>
          <h2 class="form-control"><%= @article.published_date %></h2>
        </div>
        <div class="d-lg-flex gap-3 mt-4">
          <div class="form-group p-2 d-flex align-items-center gap-2">
            <label class="form-check-label" for="exampleCheck1">Highlight</label>
            <input disabled type="checkbox" class="form-check-input" id="exampleCheck1" <%= @article.highlight ? 'checked' : '' %> >
          </div>
        </div>
      </div>

      <div class="col-md-6">
      </div>
    </div>
    <div class="form-group p-2 mt-4">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "Edit", edit_article_path(@article) , class: "btn btn-dark text-light fw-medium me-3" %>
      </div>
    </div>
</div>