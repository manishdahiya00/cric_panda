<%= stylesheet_link_tag "admin" %>
<nav class="navbar px-5 me-5">
  <h2>Admin Dashboard</h2>
  <a href="/app_offers"><%= image_tag "user.png",style: "width:50px" %></a>
</nav>
<hr/>
<div class="main">
  <div class="px-4">
    <%= render "shared/sidebar" %>
  </div>
  <div class="main-content container">
    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <div class="d-lg-flex justify-content-start align-items-center gap-3">
      <%= link_to "Back", app_banners_path,class:"btn btn-dark fw-medium" %>
      <h1><%= @app_banner.id %></h1>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Image Url</label>
          <h2 class="form-control"><%= @app_banner.image_url %></h2>
        </div>

        <div class="form-group p-2">
          <label class="control-label fs-5 fw-medium">Redirect Url</label>
          <h2 class="form-control"><%= @app_banner.redirect_url %></h2>
        </div>
      </div>
    </div>
    <div class="form-group p-2 mt-4">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "Edit", edit_app_banner_path , class: "btn btn-dark text-light fw-medium me-3" %>
      </div>
    </div>
  </div>
</div>