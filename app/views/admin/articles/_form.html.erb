<%= stylesheet_link_tag "admin" %>
<%= form_with(model: article,url:admin_article_path, class: "form-horizontal") do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this app_offer from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group p-2">
        <%= form.label :title, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :img_url, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :img_url, class: "form-control" %>
      </div>
        <div class="form-group p-2 d-flex align-items-center gap-2">
          <%= form.label :highlight, class: "control-label fs-5 fw-medium" %>
          <%= form.check_box :highlight, class: "form-check-input" %>
        </div>
      </div>
    <div class="col-md-6">
      <div class="form-group p-2">
        <%= form.label :description, class: "control-label fs-5 fw-medium" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :permalink, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :permalink, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group p-2">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Save", class: "btn edit-save-btn text-light fw-medium" %>
    </div>
  </div>
<% end %>