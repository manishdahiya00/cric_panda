 <div class="main-content">
    <% if notice %>
      <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="mb-4">Listing Campaign Info</h1>
      <%= link_to "New campaign info", new_campaign_info_path ,class:"btn btn-success mb-4"%>
    </div>
    <div>
         <div>
        <%= form_with(url: campaign_infos_path, method: :get) do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Search by title", class: "form-control" %>
      </div>
        <% end %>
      </div>
        <%= render "campaign_info" %>
    </div>
  </div>
