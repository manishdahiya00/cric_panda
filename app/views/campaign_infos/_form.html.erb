<%= form_with(model: @campaign_info, class: "form-horizontal") do |form| %>
  <% if @campaign_info.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@campaign_info.errors.count, "error") %> Prohibited this campaign_info from being saved:</h2>
      <ul>
        <% @campaign_info.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group p-2">
        <%= form.label :title, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :redirect_url, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :redirect_url, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :amount, class: "control-label fs-5 fw-medium" %>
        <%= form.text_area :amount, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :offer_steps, class: "control-label fs-5 fw-medium" %>
        <%= form.text_area :offer_steps, class: "form-control" %>
      </div>
      <div class="form-group p-2 d-flex align-items-center gap-2">
        <%= form.label :status, class: "control-label fs-5 fw-medium" %>
        <%= form.check_box :status, class: "form-check-input" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group p-2">
        <%= form.label :identifier, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :identifier, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :source, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :source, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :publisher, class: "control-label fs-5 fw-medium" %>
        <%= form.text_field :publisher, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= form.label :term_n_conditions, class: "control-label fs-5 fw-medium" %>
        <%= form.text_area :term_n_conditions, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group p-2">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Save", class: "btn edit-save-btn text-light fw-medium" %>
    </div>
  </div>
<% end %>